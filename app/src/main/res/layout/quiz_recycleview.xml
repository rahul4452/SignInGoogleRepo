<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <TextView
            android:id="@+id/numofQues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:text="Ques 1/5" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="dasdajkhdfshsdfhajksdfhlasdhflaslhjadsf" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/optionLayout1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/option_layout"

                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1211asd3"
                    android:textColor="@color/black"
                    style="@style/option"
                    />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/optionLayout2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/option_layout"

                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1211asd3"
                    android:textColor="@color/black"
                    style="@style/option"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/optionLayout3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/option_layout"

                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1211asd3"
                    android:textColor="@color/black"
                    style="@style/option"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/optionLayout4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/option_layout"

                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1211asd3"

                    android:textColor="@color/black"
                    style="@style/option"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>